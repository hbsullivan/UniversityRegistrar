@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>There are no courses added yet!</h3>
}
else
{
  <ul>
    @foreach (Course course in Model)
    {
     <li>@Html.ActionLink($"{course.Name}","Details",new { id = course.CourseId}) : @course.Number</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>